<!DOCTYPE html>
    <head>
        
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"/>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        
        <style>
            ul{
                width:50%;
                margin:0 auto;
            }
            div{
                margin:1rem auto;
                width:50%;
                position: relative;
            }
            div a{
                position: absolute;
                right:0rem;
                bottom:0;
                font-size:16px !important;
            }
            h2{
                display: inline;
            }
            .badge{
                color:#aaa;
            }
            span{
                position: absolute;
                right:0.5rem;
            }
        </style>
    </head>


    <body>
        <div>
            <h2>Personal Blog</h2>
            <a href="/admin/article" class="badge">Add Article</a>
        </div>
        <ul class="list-group">
            <% articles.forEach((article) => { %>
                <li class="list-group-item">
                     <a href="/article/<%= article.id %>"><%= article.title %> </a>
                     <span class="">
                        <a href="/admin/article/<%=article.id%>" class="badge">Edit</a>
                        <a href="/admin/article/<%=article.id%>/del" class="badge">Delete</a>
                     </span>
                     
                </li>
            <% } ) %>
        </ul>
    </body>
</html>