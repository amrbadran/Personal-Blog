<!DOCTYPE html>
    <head>
        
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"/>
        <style>
            form,h2{
                width:50%;
                margin:1rem auto;
            }
        </style>
        
        
    </head>

    <body>
        <h2 class="text-center"><%= flag ? "Update" : "Add"%> Article</h2>
        <form method="post" action="/admin/article/<%= flag ? id : "" %>">
            <div class="mt-3 form-group">
              <label for="title">Article Title</label>
              <input type="text" name="title" class="form-control" id="title">
            </div>
            <div class="mt-3 form-group">
              <label for="Date">Publishing Date</label>
              <input type="text" name="date" class="form-control" id="Date">
            </div>
            <div class="mt-3 form-group">
                <label for="content">Content</label>
                <textarea class="form-control" name="content" id="content"></textarea>
            </div>
            <button type="submit" class="mt-3 btn btn-primary"><%= flag ? "Update" : "Publish"%></button>
          </form>
    </body>
</html>